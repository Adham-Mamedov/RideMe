{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prisma:init": "yarn prisma migrate dev --name \"init\" --schema=./prisma/base.prisma",
    "prisma:generate": "yarn prisma generate --schema=./prisma/base.prisma",
    "prisma:push": "npx prisma db push --schema=./prisma/base.prisma",
    "prisma:build": "yarn prisma:generate",
    "prebuild": "rimraf dist && yarn prisma:build",
    "build": "nest build",
    "dev": "yarn prebuild && nest start --watch",
    "start": "node dist/server/src/main",
    "format": "prettier --config ../../.prettierrc --write \"./**/*.[jt]s?(x)\"",
    "lint": "eslint \"./**/*.[jt]s?(x)\" --fix"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/static": "^6.6.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-fastify": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@prisma/client": "^4.6.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "nestjs-prisma": "^0.19.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fastify": "^4.10.2",
    "prisma": "^4.8.0",
    "source-map-support": "^0.5.21"
  }
}
